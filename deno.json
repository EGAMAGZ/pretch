{
  "workspace": [
    "./packages/pretch-core",
    "./packages/pretch-preact",
    "./packages/pretch-react"
  ],
  "imports": {
    "@std/expect": "jsr:@std/expect@^1.0.5",
    "jsdom": "npm:jsdom@^25.0.1"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lint": {
    "rules": {
      "include": [
        "no-console",
        "ban-types",
        "camelcase",
        "verbatim-module-syntax"
      ]
    }
  },
  "exclude": [
    ".git",
    ".vscode"
  ]
}
